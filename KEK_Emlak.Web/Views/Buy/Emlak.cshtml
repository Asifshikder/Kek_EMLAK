@model IEnumerable<KEK_Emlak.Web.Controllers.BuyVM>
@{
    ViewData["Title"] = "Emlak";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Satın Alma İşlemlerim</h3>

    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="pull-left"> <h4><i class="fa fa-angle-right"></i>Satın Alınanlar</h4></div>
                        </div>
                        <div class="col-md-6">
                            <div class="pull-right" style="padding-right:20px"> <a href="/Home/AllProduct"><i class="fa fa-plus"></i>Daha fazla al</a></div>
                        </div>
                    </div>

                    <hr>
                    <thead>
                        <tr>
                            <th hidden>#</th>
                            <th>İsim</th>
                            <th>Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td hidden>@item.BuyId</td>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
</section>