@model IEnumerable<KEK_Emlak.Web.Models.SellerModel>
@{
    ViewData["Title"] = "Sellers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12" style="background-color:#d4d4d4;border-radius:10px">
                <div class="card-title" style="margin-top:10px">
                    <h5>Satış Danışmanlarımız</h5>
                    <hr />
                </div>
                <div style="background-color:#dafbeb;border-radius:10px; padding:15px">
                    <div class="row" style="margin-left:32px">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3" style="background-color:#e9d4d4;border-color:#000000;border-radius:10px;margin:30px">
                                <div style="padding:10px">
                                    <a href="/User/UserProfile?id=@item.UserId">
                                        <div>
                                            @if (item.UserImage != null)
                                            {
                                                <img src="@Url.Content(item.UserImage)" height="160" width="250" style="border-radius:19px" />
                                            }
                                            else
                                            {
                                                <img src="~/Human.png" height="150" width="220" style="border-radius:19px" />
                                            }
                                        </div>
                                        <div><p class="text-danger">@item.UserTypeName</p></div>
                                        <div><h6 class="text-dark">@item.UserName</h6></div>

                                    </a>
                                </div>
                            </div>
                        }
                        @if (Model == null)
                        {
                            <div class="col-md-12">
                                <div class="text-center" style="padding:10px">
                                    <h6 class="text-warning">Hiç bir satış danışmanı bulunamadı</h6>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

