@model IEnumerable<KEK_Emlak.Web.Models.ProductModel>
@{
    ViewData["Title"] = "All Product";
}

<div class="text-center">
    <h4>KEK ÇEVRİMİÇİ EMLAK</h4>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12" style="background-color:#d4d4d4;border-radius:10px">
                <div class="card-title" style="margin-top:10px">
                    <h5>Emlaklar</h5>
                    <hr />
                </div>
                <div style="background-color:#dafbeb;border-radius:10px; padding:15px">
                    <div style="margin:10px">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-3">
                                    <div style="background-color:#e9d4d4;border-color:#000000;border-radius:10px;margin:10px">
                                        <div style="padding:10px">
                                            <a href="/Product/Details?id=@item.ProductId">
                                                <div>
                                                    <img src="@Url.Content(item.DisplayImage)" height="150" width="200" style="border-radius:19px" />
                                                </div>
                                                <div><h6 class="text-dark">@item.ProductName</h6></div>
                                                <div><p class="text-danger">₺@item.Price</p></div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model == null)
                            {
                                <div class="col-md-12">
                                    <div class="text-center" style="padding:10px">
                                        <p class="text-danger">Ürün Bulunamadı
                                        </p>
                                    </div>
                                </div>
                            }

                        </div>
                </div>
                </div>

            </div>

        </div>

    </div>
</div>
