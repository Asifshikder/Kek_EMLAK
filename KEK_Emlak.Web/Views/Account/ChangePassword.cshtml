@model KEK_Emlak.Web.Models.PasswordVM
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LayoutLoginRegister.cshtml";
}


<div class="card" style="padding-top:30px;background-color:#e4f4fb">
    <div class="card-title">
        <div class="col-sm-12">
        </div>
    </div>
    <div class="card-body">
        <div class="row" style="align-content: center;">
            <div class="col-2"></div>
            <div class="col-8" style="background-color:white;padding: 10px;">
                <div style="padding:20px">
                    <form asp-controller="Account" asp-action="ChangePasswordConfirm" method="post">
                        <div class="row" style="padding:12px;background-color:white;font-size:small">
                            <div class="col-sm-1"></div>
                            <div class="col-sm-10">
                                <div class="text-center">
                                    <h5><b>Şifre Değiştir </b></h5>
                                    <h7>Şifrenizi Daha sonra tekrar girmek için lütfen kaydedin.</h7>
                                </div>
                                <div class="">
                                    <label>Eski Şifre</label>
                                    <br />
                                    <input asp-for="OldPassword" class="form-control" required type="password" placeholder="Eski Şifrenizi Giriniz">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="OldPassword" style="color:yellow"></span>
                                </div>
                                <div class="">
                                    <label>Yeni Şifre</label>
                                    <br />
                                    <input asp-for="Password" required type="password" class="form-control" placeholder="Yeni Şifrenizi Giriniz">
                                </div>
                                <div class="form-group">
                                    <span asp-validation-for="Password" style="color:yellow"></span>
                                </div>
                                <p style="color:red">@Html.DisplayFor(model => Model.Errormessage)</p>
                                <div class="form-group">
                                    @Html.HiddenFor(model => Model.UserID)
                                    @Html.HiddenFor(model => Model.BaseCode)
                                </div>
                                <div style="padding-top:30px;">
                                    <input type="submit" class="btn btn-block btn-primary" value="Kaydet">
                                </div>
                                <div class="form-group">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-12 text-center">
                                            <a href="/Account/ForgotPassword" style="color:red;text-align:right;font-size:13px">Şifremi Unuttum</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-1"></div>

                        </div>
                    </form>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>