@model IEnumerable<KEK_Emlak.Data.Entities.ApplicationUser>
@{
    ViewData["Title"] = "Tüm Satış Danışmanları";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Satış Danışmanları</h3>

    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="pull-left"> <h4><i class="fa fa-angle-right"></i>Satış Danışmanları</h4></div>
                        </div>
                    </div>

                    <hr>
                    <thead>
                        <tr>
                            <th hidden>#</th>
                            <th>Profil Fotoğrafı</th>
                            <th>İsim</th>
                            <th>Adres</th>
                            <th>Telefon Numarası</th>
                            <th>Detay/Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td hidden>@item.Id</td>
                                <td>
                                    @if (item.UserImage == null)
                                    {
                                        <img src="~/Human.png" height="40" width="50" style="border-radius:7px" />
                                    }
                                    else
                                    {
                                        <img src="@Url.Content(item.UserImage)" height="40" width="50" style="border-radius:7px" />
                                    }
                                </td>
                                <td>@item.FullName</td>
                                <td>@item.Address</td>
                                <td>@item.PhoneNumber</td>
                                <td>
                                    <a href="/User/UserProfile?id=@item.Id" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
                                    <a href="/Account/Delete?id=@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
</section>