<form asp-action="BuyProduct" asp-controller="Buy" method="post">
    <input hidden asp-for="Id"/>
    <input hidden asp-for="Price"/>
    <div class="container">
        <div class="card">
            <div style="padding:20px">
                <div class="row">
                    <div class="col-md-6">

                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"><img src="@Url.Content(Model.DisplayImage)" width="430" height="258" /></div>
                            <div class="tab-pane" id="pic-2">
                                <img src="@Url.Content(Model.Image2)" width="430" height="258" />
                            </div>
                            <div class="tab-pane" id="pic-3"><img src="@Url.Content(Model.Image3)" width="430" height="258" /></div>
                            <div class="tab-pane" id="pic-4"><img src="@Url.Content(Model.Image4)" width="430" height="258" /></div>
                            <div class="tab-pane" id="pic-5"><img src="@Url.Content(Model.Image5)" width="430" height="258" /></div>
                        </div>
                        <ul class="preview-thumbnail nav nav-tabs" style="padding:10px">
                            <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="@Url.Content(Model.DisplayImage)" width="100" height="63" /></a></li>
                            <li><a data-target="#pic-2" data-toggle="tab"><img src="@Url.Content(Model.Image2)" width="100" height="63" /></a></li>
                            <li><a data-target="#pic-3" data-toggle="tab"><img src="@Url.Content(Model.Image3)" width="100" height="63" /></a></li>
                            <li><a data-target="#pic-4" data-toggle="tab"><img src="@Url.Content(Model.Image4)" width="100" height="63" /></a></li>
                            <li><a data-target="#pic-5" data-toggle="tab"><img src="@Url.Content(Model.Image5)" width="100" height="63" /></a></li>
                        </ul>

                    </div>
                    <div class="col-md-6">
                        <h3 class="text-dark">@Model.Name</h3>

                        <p class="product-description">@Model.Details</p>
                        <h5 class="price">Kategori: <span>@Model.CategoryName</span></h5>
                        <h4 class="price">Fiyat: <span>₺@Model.Price</span></h4>
                        <h4 class="price">Alan: <span>@Model.Area</span></h4>
                        <h4 class="price">Adres: <span>@Model.Location</span></h4>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (Model.canBuy == true)
                            {
                                <div class="action">
                                    <button type="submit" class="btn btn-success btn-lg">Satın Al</button>
                                </div>
                            }
                            else
                            {
                                <div class="action">
                                    <p></p>
                                </div>
                            }

                        }
                        else
                        {
                            <div class="action">
                                <a href="/Account/Login?loginurl=@returnurl" class="btn btn-success btn-lg" type="button">Almak için Giriş Yapınız</a>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
