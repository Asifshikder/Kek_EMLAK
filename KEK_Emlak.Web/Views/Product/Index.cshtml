@model IEnumerable<KEK_Emlak.Data.Entities.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Emlaklar</h3>

    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="pull-left"> <h4><i class="fa fa-angle-right"></i>Emlak Listesi</h4></div>
                        </div>
                    </div>

                    <hr>
                    <thead>
                        <tr>
                            <th hidden>#</th>
                            <th>Resim</th>
                            <th>İsim</th>
                            <th>Fiyat</th>
                            <th>Alan</th>
                            <th>Adres</th>
                            <th>Güncelle/Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td hidden>@item.Id</td>
                                <td><img height="50" src="@Url.Content(item.DisplayImage)" /></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Area</td>
                                <td>@item.Location</td>
                                <td>
                                    <a href="/Product/Details?id=@item.Id" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
                                    <a href="/Product/Edit?id=@item.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="/Product/Delete?id=@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
</section>