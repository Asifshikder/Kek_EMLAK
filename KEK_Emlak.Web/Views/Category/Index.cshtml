@model IEnumerable<KEK_Emlak.Data.Entities.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i>Kategoriler</h3>
  
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="pull-left"> <h4><i class="fa fa-angle-right"></i> Kategori Tablosu</h4></div>
                        </div>
                        <div class="col-md-6">
                            <div class="pull-right" style="padding-right:20px"> <a href="/category/Create"><i class="fa fa-plus"></i>Yeni Kategori Oluştur</a></div>

                        </div>
                    </div>
                   
                    <hr>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Açıklama</th>
                            <th>Düzenle/Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    @*<button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>*@
                                    <a href="/Category/Edit?id=@item.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a href="/Category/Delete?id=@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>
</section>