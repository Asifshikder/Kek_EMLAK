@model KEK_Emlak.Data.Entities.Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Kategori Sil</h3>

    <div class="form-panel">
        <h4 class="mb"><i class="fa fa-angle-right"></i>Kategori @Html.DisplayFor(s => s.Name)</h4>
        <form class="form-horizontal style-form" method="post" asp-action="DeleteConfirm" asp-controller="Category">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Name)
            <div class="form-group">
                <div class="col-sm-12">
                    <div class="text-right">
                        <a class="btn btn-warning btn-sm" href="/category/index">İptal</a>
                        <button type="submit" class="btn btn-primary btn-sm">Sil</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
</section>